<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_color_selector_main"
    android:layout_width="250dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/color_selector_title"
        android:gravity="center"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="R"
            android:gravity="center"/>
        <SeekBar
            android:id="@+id/seekbar_color_R"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8" />
        <TextView
            android:id="@+id/textview_color_R_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="G"
            android:gravity="center"/>
        <SeekBar
            android:id="@+id/seekbar_color_G"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"/>
        <TextView
            android:id="@+id/textview_color_G_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="B"
            android:gravity="center"/>
        <SeekBar
            android:id="@+id/seekbar_color_B"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"/>
        <TextView
            android:id="@+id/textview_color_B_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:gravity="center"/>
    </LinearLayout>

    android:textSize="@dimen/font_size_preview_text"
    <TextView
        android:id="@+id/textview_preview_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/color_selector_preview_text"
        android:gravity="center"
        android:textSize="@dimen/font_size_preview_text"/>
    <Button
        android:id="@+id/button_color_selector_confirm"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/button_confirm"
        android:textAllCaps="false"
        android:textSize="@dimen/font_size_button_default"
        android:layout_gravity="end"
        />

</LinearLayout>