<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageview_back"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/outline_arrow_back_white_18"
            android:scaleX="0.5"
            android:scaleY="0.5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/title_setting_color"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_title_bar"
            android:paddingLeft="@dimen/default_padding"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include android:id="@+id/layout_keyword"
                layout="@layout/item_color_setting"/>
            <include android:id="@+id/layout_comment"
                layout="@layout/item_color_setting"/>
            <include android:id="@+id/layout_string"
                layout="@layout/item_color_setting"/>
            <include android:id="@+id/layout_char"
                layout="@layout/item_color_setting"/>
            <include android:id="@+id/layout_number"
                layout="@layout/item_color_setting"/>
            <include android:id="@+id/layout_operator"
                layout="@layout/item_color_setting"/>
            <include android:id="@+id/layout_regular"
                layout="@layout/item_color_setting"/>
            <include android:id="@+id/layout_background_odd"
                layout="@layout/item_color_setting"/>
            <include android:id="@+id/layout_background_even"
                layout="@layout/item_color_setting"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>